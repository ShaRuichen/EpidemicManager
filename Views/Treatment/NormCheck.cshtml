@model TreatmentModel
@{
    ViewBag.Ref = "treatment";
    ViewBag.Title = "查看";
}
<body>
    <div class="text-c">
        @if (Model.IDs.Count == 0)
        {
            <p>没有数据</p>
        }
        else
        {
            int m = 0;
            <table class="table table-hover">
                <caption>患者治疗计划</caption>
                <tr>
                    <th>计划编号</th>
                    <th>医生ID</th>
                    <th>病人ID</th>
                    <th>修改日期</th>
                    <th>修改时间</th>
                    <th>药物</th>
                    <th>详情</th>
                </tr>
                @while (true)
                {
                    string a;
                    <tr>
                        @while (true)
                        {
                            <td class="mm">@Model.IDs[m]</td>
                            @if ((m - 1) % 7 == 0)
                            {
                                a = Model.IDs[m];
                            }
                            m++;
                            @if ((m + 1) % 7 == 0)
                            {
                                m++;
                            }
                            @if (m % 7 == 0)
                            {

                                break;
                            }
                        }
                        <td>
                            <input id="button_@Model.IDs[m-7]" type="hidden" value=@Model.IDs[m-7] />
                            <input id="button_@Model.IDs[m-7]" type="button" class="btn btn-primary" value="查看" onclick="Moo(this)" />
                        </td>
                    </tr>
                    if (m == Model.IDs.Count)
                    {
                        break;
                    }
                }
            </table>

            <div id="staff"></div>
        }
    </div>
</body>
