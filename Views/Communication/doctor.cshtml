@model DocCommunicationMobel
@{ ViewBag.Ref = "Communication";
    ViewBag.Title = "医生答疑"; }

<form class="Communication_form" method="post" action="doctor">

    <div class="form-group">
        <label for="question_content" class="col-sm-2 control-label">问题描述</label>
        <div class="col-sm-10">
            @Html.TextBox("question_content", null, new { @class = " form-control ", placeholder = "请输入问题描述" })
        </div>
    </div>

    <div class="form-group">
        <label for="question_content" class="col-sm-2 control-label">患者id</label>
        <div class="col-sm-10">
            @Html.TextBox("user_id", null, new { @class = " form-control ", placeholder = "请输入问题描述" })
        </div>
    </div>
    <div class="form-group">
        <label for="doc_name" class="col-sm-2 control-label">医生姓名</label>
        <div class="col-sm-10">
            @Html.TextBox("doc_name", null, new { @class = " form-control ", placeholder = "请输入您的姓名" })
        </div>
    </div>
    <div class="form-group">
        <label for="date" class="col-sm-2 control-label">回答日期</label>
        <div class="col-sm-10">
            @Html.TextBox("date", null, new { @class = " form-control ", placeholder = "回答日期" })
        </div>
    </div>
    <div class="form-group">
        <label for="people_id" class="col-sm-2 control-label">问题回答</label>
        <div class="col-sm-10">
            @Html.TextBox("answer", null, new { @class = " form-control ", placeholder = "请输入问题回答" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-light">提交</button>
        </div>
    </div>
</form>