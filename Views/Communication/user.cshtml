@model UserCommunitionMobel
@{ ViewBag.Ref = "Communication";
    ViewBag.Title = "用户问询"; }

<form class="Communication_form" method="post" action="user">
    <div class="form-group">
        <label for="user_name" class="col-sm-2 control-label">用户姓名</label>
        <div class="col-sm-10">
            @Html.TextBox("user_name", null, new { @class = " form-control ", placeholder = "请输入姓名" })
        </div>
    </div>
    <div class="form-group">
        <label for="user_idNumber" class="col-sm-2 control-label">用户身份证号</label>
        <div class="col-sm-10">
            @Html.TextBox("user_idNumber", null, new { @class = " form-control ", placeholder = "请输入身份证号" })
        </div>
    </div>
    <div class="form-group">
        <label for="date" class="col-sm-2 control-label">问询时间</label>
        <div class="col-sm-10">
            @Html.TextBox("date", null, new { @class = " form-control ", placeholder = "问询时间" })
        </div>
    </div>
    <div class="form-group">
        <label for="question_id" class="col-sm-2 control-label">问题ID</label>
        <div class="col-sm-10">
            @Html.TextBox("question_id", null, new { @class = " form-control ", placeholder = "请输入问题ID" })
        </div>
    </div>
    <div class="form-group">
        <label for="question_content" class="col-sm-2 control-label">问询具体内容</label>
        <div class="col-sm-10">
            @Html.TextBox("question_content", null, new { @class = " form-control ", placeholder = "请输入您要问询的具体内容" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox">我已确认无误
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-light">提交</button>
        </div>
    </div>
</form>