@model CheckMobel
@{ ViewBag.Ref = "Communication";
    ViewBag.Title = "查看线上答疑"; }

<form class="Communication_form" method="post" action="check">
    <div class="form-group">
        <label for="question_id" class="col-sm-2 control-label">用户姓名</label>
        <div class="col-sm-10">
            @Html.TextBox("question_id", null, new { @class = " form-control ", placeholder = "请输入姓名" })
        </div>
    </div>
    <div class="form-group">
        <label for="user_idNumber" class="col-sm-2 control-label">用户身份证号</label>
        <div class="col-sm-10">
            @Html.TextBox("user_idNumber", null, new { @class = " form-control ", placeholder = "请输入身份证号" })
        </div>
    </div>
    <div class="form-group">
        <label for="question_type" class="col-sm-2 control-label">问题类型</label>
        <div class="col-sm-10">
            @Html.TextBox("question_type", null, new { @class = " form-control ", placeholder = "请输入问题类型" })
        </div>
    </div>
    <div class="form-group">
        <label for="question_id" class="col-sm-2 control-label">问题ID</label>
        <div class="col-sm-10">
            @Html.TextBox("question_id", null, new { @class = " form-control ", placeholder = "问题ID" })
        </div>
    </div>
    <div class="form-group">
        <label for="doc_name" class="col-sm-2 control-label">医生姓名</label>
        <div class="col-sm-10">
            @Html.TextBox("doc_name", null, new { @class = " form-control ", placeholder = "解答您的问题的医生为" })
        </div>
    </div>
    <div class="form-group">
        <label for="date" class="col-sm-2 control-label">回答日期</label>
        <div class="col-sm-10">
            @Html.TextBox("date", null, new { @class = " form-control ", placeholder = "回答具体日期为" })
        </div>
    </div>
    <div class="form-group">
        <label for="answer" class="col-sm-2 control-label">问题回答</label>
        <div class="col-sm-10">
            @Html.TextBox("answer", null, new { @class = " form-control ", placeholder = "请查看解答" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox">我已确认无误
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-light">提交</button>
        </div>
    </div>
</form>
