@{
    ViewBag.Ref = "login";
    ViewBag.Title = "登录";
}
<div class="text-center">
    <form class="form-signin" onsubmit="return login()">
        <h1 class="mb-3">请登录</h1>
        <input type="text" class="form-control" name="id" placeholder="身份证号" required autofocus />
        <input type="password" class="form-control" name="password" placeholder="密码" required />
        <div class="mb-3">
            <label><input type="radio" name="kind" value="people" checked="checked" /> 民众</label>
            <label><input type="radio" name="kind" value="doctor" /> 医生</label>
            <label><input type="radio" name="kind" value="manager" /> 管理员</label>
        </div>
        <div class="mb-3"></div>
        <button class="btn btn-primary btn-block" type="submit">登录</button>
        <div class="form-div">
            <div class="checkbox mt-3" style="float:left">
                <input type="checkbox" value="remember-me"> 记住我
            </div>
            <a class="btn btn-link mt-2" style="float:right" href="/login/peopleregister">民众注册</a>
        </div>
        <p class="mt-5 text-danger" id="errorMessage"></p>
    </form>
</div>
