@model Settingsmanager
@{
    ViewBag.Ref = "Settings";
    ViewBag.Title = "管理员修改信息";
}

<form class="Settings_form" method="post" action="Manager">
    <div>
        <span>以下是您可以修改的信息，框内为原值(不填则为默认不修改)：</span>
    </div>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">姓名</label>
        <div class="col-sm-10">
            @Html.TextBox("name", null, new { @class = " form-control ", placeholder = "姓名" })
        </div>
    </div>
    <div class="form-group">
        <label for="hos_name" class="col-sm-2 control-label">性别</label>
        <div class="col-sm-10">
            男 @Html.RadioButton("sex", "male", true, new { @class = "radioStyle" })
            女 @Html.RadioButton("sex", "female", true, new { @class = "radioStyle" })
        </div>
    </div>
    <div class="form-group">
        <label for="hos_name" class="col-sm-2 control-label">工作单位</label>
        <div class="col-sm-10">
            @Html.TextBox("work_unit", null, new { @class = " form-control ", placeholder = "工作单位" })
        </div>
    </div>
    <div class="form-group">
        <label for="hos_name" class="col-sm-2 control-label">电话</label>
        <div class="col-sm-10">
            @Html.TextBox("tel", null, new { @class = " form-control ", placeholder = "电话", type = "tel" })
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">此处输入旧密码</label>
        <div class="col-sm-10">
            @Html.Password("password", null, new { @class = " form-control ", placeholder = "密码" })
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">新密码</label>
        <div class="col-sm-10">
            @Html.Password("password1", null, new { @class = " form-control " })
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">再次输入新密码</label>
        <div class="col-sm-10">
            @Html.Password("password2", null, new { @class = " form-control " })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-light">提交</button>
        </div>
    </div>
    <p><div class="btn btn-primary" id="DeleteManager" onclick="Delete_manager()">删除个人信息</div></p>
</form>