@model Settingsmanager
@{
    ViewBag.Ref = "Settings";
    ViewBag.Title = "管理员修改信息";
}

<form class="Settings_form" method="post" action="Changepeople">
    <div>
        <p>您当前的信息:</p><br />
        <p>身份证号：</p><p>@Model.man_id</p><br />
        <p>姓名：</p><p>@Model.name</p><br />
        <p>性别：</p><p>@Model.sex</p><br />
        <p>电话</p><p>@Model.tel</p><br />
        <p>工作单位</p><p>@Model.work_unit</p><br />
        <p>密码：</p><p>@Model.password</p><br /><br />
        <p>以下是您可以修改的信息，框内为原值(不填则为默认不修改)：</p><br />
    </div>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">姓名</label>
        <div class="col-sm-10">
            @Html.TextBox("name", null, new { @class = " form-control ", placeholder = "姓名" })
        </div>
    </div>
    <div class="form-group">
        <label for="hos_name" class="col-sm-2 control-label">地址</label>
        <div class="col-sm-10">
            @Html.TextBox("sex", null, new { @class = " form-control ", placeholder = "性别" })
        </div>
    </div>
    <div class="form-group">
        <label for="hos_name" class="col-sm-2 control-label">地址</label>
        <div class="col-sm-10">
            @Html.TextBox("work_unit", null, new { @class = " form-control ", placeholder = "工作单位" })
        </div>
    </div>
    <div class="form-group">
        <label for="hos_name" class="col-sm-2 control-label">地址</label>
        <div class="col-sm-10">
            @Html.TextBox("tel", null, new { @class = " form-control ", placeholder = "电话" })
        </div>
    </div>
    <div class="form-group">
        <label for="hos_name" class="col-sm-2 control-label">地址</label>
        <div class="col-sm-10">
            @Html.TextBox("address", null, new { @class = " form-control ", placeholder = "地址" })
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">密码</label>
        <div class="col-sm-10">
            @Html.TextBox("password", null, new { @class = " form-control ", placeholder = "密码" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox">我已确认无误
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-light">提交</button>
        </div>
    </div>
</form>