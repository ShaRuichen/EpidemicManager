@model SettingsPeople
@{
    ViewBag.Ref = "Settings";
    ViewBag.Title = "修改个人信息";
}
    <form class="Settings_form" method="post" action="Changepeople">
        <div>
            <p>您当前的信息:</p>
            <p>身份证号：</p><p>@Model.people_id</p>
            <p>姓名：</p><p>@Model.name</p>
            <p>地址：</p><p>@Model.address</p>
            <p>性别：</p><p>@Model.sex</p>
            <p>电话：</p><p>@Model.tel</p>
            <p>密码：</p><p>@Model.password</p>
            <p>以下是您可以修改的信息，框内为原值(不修改则为默认不修改)：</p><br />
        </div>
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">姓名</label>
            <div class="col-sm-10">
                @Html.TextBox("name", null, new { @class = " form-control ", placeholder = "姓名" })
            </div>
        </div>
        <div class="form-group">
            <label for="address" class="col-sm-2 control-label">地址</label>
            <div class="col-sm-10">
                @Html.TextBox("address", null, new { @class = " form-control ", placeholder = "地址" })
            </div>
        </div>
        <div class="form-group">
            <label for="tel" class="col-sm-2 control-label">电话</label>
            <div class="col-sm-10">
                @Html.TextBox("tel", null, new { @class = " form-control ", placeholder = "电话", type="tel"})
            </div>
        </div>
        <div class="form-group">
            <label for="sex" class="col-sm-2 control-label">性别</label>
            <div class="col-sm-10">
                男 @Html.RadioButton("sex", "male", true, new { @class = " form-control " })
                女 @Html.RadioButton("sex", "female", true, new { @class = " form-control " })
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-10">
                @Html.TextBox("password", null, new { @class = " form-control ", placeholder = "密码" })
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">新密码</label>
            <div class="col-sm-10">
                @Html.Password("password1", null, new { @class = " form-control " })
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">再次输入新密码</label>
            <div class="col-sm-10">
                @Html.Password("password2", null, new { @class = " form-control " })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-light">提交</button>
            </div>
        </div>
    </form>