@model Settingspatient
@{
    ViewBag.Ref = "Settings";
    ViewBag.Title = "病人修改信息";
}

    <form class="Settings_form" method="post" action="Changepeople">
        <div>
            <span>您当前的信息:</span><br />
            <p>身份证号：</p><p>@Model.pat_id</p>
            <span>姓名：</span><p>@Model.name</p>
            <span>性别：</span><p>@Model.sex</p>
            <span>所在医院</span><p>@Model.hos_name</p>
            <span>密码：</span><p>@Model.password</p>
            <span>以下是您可以修改的信息，框内为原值(不填则为默认不修改)：</span>
        </div>
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">姓名</label>
            <div class="col-sm-10">
                @Html.TextBox("name", null, new { @class = " form-control ", placeholder = "姓名" })
            </div>
        </div>
        <div class="form-group">
            <label for="hos_name" class="col-sm-2 control-label">性别</label>
            <div class="col-sm-10">
                男 @Html.RadioButton("sex", "male", true, new { @class = " form-control " })
                女 @Html.RadioButton("sex", "female", true, new { @class = " form-control " })
            </div>
        </div>
        <div class="form-group">
            <label for="hos_name" class="col-sm-2 control-label">所在医院</label>
            <div class="col-sm-10">
                @Html.TextBox("hos_name", null, new { @class = " form-control ", placeholder = "所在医院" })
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-10">
                @Html.TextBox("password", null, new { @class = " form-control ", placeholder = "密码" })
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">新密码</label>
            <div class="col-sm-10">
                @Html.Password("password1", null, new { @class = " form-control " })
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">再次输入新密码</label>
            <div class="col-sm-10">
                @Html.Password("password2", null, new { @class = " form-control " })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-light">提交</button>
            </div>
        </div>
    </form>