<form class="Delete_form" method="post" action="Delete">
    <div class="form-group">
        <label for="people_id" class="col-sm-2 control-label">身份证号</label>
        <div class="col-sm-10">
            @Html.TextBox("person_id", null, new { @class = " form-control ", placeholder = "输入身份证号" })
        </div>
    </div>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">姓名</label>
        <div class="col-sm-10">
            @Html.TextBox("kind", null, new { @class = " form-control ", placeholder = "输入您的身份(doctor/patient/manager/people)" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox">我已确认无误
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-light">删除</button>
        </div>
    </div>
</form>