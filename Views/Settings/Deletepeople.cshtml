@model SettingsPeople
@{
    ViewBag.Ref = "Settings";
    ViewBag.Title = "修改个人信息";
}
<form class="Delete_form" method="post" action="Deletepeople">
    <div>
        <p>您当前的信息如下且将被删除！</p>
        <p>您当前的信息:</p>
        <p>身份证号：</p><p>@Model.people_id</p>
        <p>姓名：</p><p>@Model.name</p>
        <p>地址：</p><p>@Model.address</p>
        <p>性别：</p><p>@Model.sex</p>
        <p>电话：</p><p>@Model.tel</p>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">密&nbsp;&nbsp;&nbsp;&nbsp;码：</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="password"
                   placeholder="请输入旧密码" id="people_pwd">
        </div>
    </div>
</form>
<form onsubmit="return delpeople()">
    <p class="mt-5 text-danger" id="people_error"></p>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-light">确认删除</button>&nbsp;&nbsp;&nbsp;&nbsp;
            <button class="btn btn-light" href=""><a asp-area="" asp-controller="Settings" asp-action="Changepeople" style="color: black;text-decoration:none">取消</a></button>
        </div>
    </div>
</form>
