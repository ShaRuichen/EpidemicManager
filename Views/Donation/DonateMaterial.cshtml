@model DonateMaterialModel
@{
    ViewBag.Ref = "donation";
    ViewBag.Title = "捐献物资";
}
<div class="container">
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/res/houqinwuzi.svg" alt="">
        <h2>捐献物资</h2>
        <p class="lead">下表是您捐献物资需要填写的相关信息，谢谢您的爱心！</p>
    </div>
</div>
<h4 class="mb-3 ">捐献信息</h4>
<form role="form" method="post" action="DonateMaterial">
    <div class="mb-3">
        <label for="username">身份证号</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">身份证号</span>
            </div>
            <input type="text" class="form-control" value="@Model.people_id" readonly />
        </div>
    </div>

    <div class="mb-3">
        <label for="type">物资类型</label>
        @Html.TextBox("type", null, new { @class = " form-control ", placeholder = "请输入物资类型", required = "required" })
    </div>
    <div class="mb-3">
        <label for="amount">物资数量</label>
        @Html.TextBox("amount", null, new { @class = " form-control ", placeholder = "请输入物资数量", required = "required", oninput = "value=value.replace(/[^\\d]/g,'')" })
    </div>
    <hr class="mb-4">
    <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="save-info" required>
        <label class="custom-control-label" for="save-info">我已确认无误！</label>
    </div>
    <hr class="mb-4">
    <button type="submit" class="btn btn-primary btn-lg btn-block">提交</button>
</form>
<div id="kind" kind="@Model.kind"></div>

