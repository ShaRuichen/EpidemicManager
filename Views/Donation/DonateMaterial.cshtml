@model DonateMaterialModel
@{
    ViewBag.Ref = "Donation";
    ViewBag.Title = "捐献物资";
}

    <form class="form-horizontal" method="post" action="DonateMaterial">
        <div class="form-group">
            <label for="people_id" class="col-sm-2 control-label">身份证号</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.people_id"  readonly/>
            </div>
        </div>
        <div class="form-group">
            <label for="type" class="col-sm-2 control-label">物资类型</label>
            <div class="col-sm-10">
                @Html.TextBox("type", null, new { @class = " form-control ", placeholder = "请输入物资类型" ,required="required" })
            </div>
        </div>
        <div class="form-group">
            <label for="amount" class="col-sm-2 control-label">物资数量</label>
            <div class="col-sm-10">
                @Html.TextBox("amount", null, new { @class = " form-control ", placeholder = "请输入物资数量", required="required" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" required>我已确认无误
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-light">提交</button>
            </div>
        </div>
    </form>
