@model ExamineModel
@{
    ViewBag.Ref = "Examine";
    ViewBag.Title = "修改报告";
}


<h3><strong>修改检查报告</strong></h3> 
<form class="form-horizontal" method="post" >
    <div class="form-group">
        <label for="report_id" class="col-sm-2 control-label">报告ID</label>
        <div class="col-sm-10">
            <input type="text" id="report_id" class="form-control" value="@Model.ID_report" readonly />
        </div>
    </div>
    <div class="form-group">
        <label for="patient_id" class="col-sm-2 control-label">患者身份证号</label>
        <div class="col-sm-10">
            <input type="text" id="patient_id" class="form-control" value="@Model.ID_patient" oninput="value=value.replace(/[^\d|xX]/g,'')" readonly/>

        </div>
    </div>
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">报告标题</label>
        <div class="col-sm-10">
            <input type="text" id="title" class="form-control" value="@Model.title"  MaxLength = 30/>
            
        </div>
    </div>
    <div class="form-group">
        <label for="detail" class="col-sm-2 control-label">报告详细内容</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="detail" rows="5" MaxLength="500">@Model.detail</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary"  onclick="return write_()">提交</button>
        </div>
    </div>
</form>
