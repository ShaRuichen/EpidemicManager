
@model ExamineIndexModel
@{
    ViewBag.Ref = "Examine";
    ViewBag.Title = "查看检查报告";
}

<div class="text-center">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>可查看的检测报告</h3>
        </div>
    </div>
</div>
<br />
<br />
<div class="card-columns">
    @for (int i = 0; i < Model.n; i++)
    {


        <div class="card" style="width: 16rem;">
            <div class="card-body">
                <h5 class="card-title">
                    @Model.title[i]
                </h5>
                <p class="card-text">
                    报告最后一次修改的日期：@Model.date
                </p>

            </div>
            <ul class=" list-group list-group-flush">
                <li class="list-group-item">
                    报告创建日期：@Model.date[i]
                </li>  
            </ul>
            <div class="card-body">
                <form method="post" action="Read">
                    <div class="form-group">
                        <div class="col-sm-10">
                            <input type="text" style="display:none" name="report_id" class="form-control" value="@Model.report[i]" readonly />

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-light">查看</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


    }
</div>