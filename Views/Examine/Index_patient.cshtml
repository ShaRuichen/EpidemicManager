@model ExamineIndexModel
@{
    ViewBag.Ref = "Examine";
    ViewBag.Title = "查看检查报告";
}
<div class="text-center">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>可查看的检测报告</h3>
        </div>
        <div class="panel-body">
            <div class="btn-group-vertical">
                @for (int i = 0; i < Model.n; i++)

                {

                <form method="post" action="Read">
                    <div class="form-group">
                        <label for="report_id" class="col-sm-2 control-label">报告ID</label>
                        <div class="col-sm-10">
                            <input type="text" name="report_id"class="form-control" value="@Model.report[i]" readonly />

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                           
                            报告标题：@Model.title[i]<br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-light">查看</button>
                        </div>
                    </div>
                </form>
                    /*<a asp-area="" asp-controller="Examine" asp-action="Read?report_id=@Model.report[i]">

                        报告编号：@Model.report[i]<br />
                        报告标题：@Model.title[i]<br />


                    </a>*/
                }

            </div>
        </div>
    </div>
</div> 