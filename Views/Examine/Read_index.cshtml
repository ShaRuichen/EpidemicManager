@model ExamineIndexModel
@{
    ViewBag.Ref = "Examine";
    ViewBag.Title = "查看检查报告";
}

<div class="text-center">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>可查看的检测报告</h3>
        </div>
        <div class="panel-body">
            <div class="btn-group-vertical">
                @for (int i = 0; i < Model.n; i++)
                {
                <form method="post" action="Read">
                    <div class="form-group">
                        <label for="report_id" class="col-sm-2 control-label">报告ID</label>
                        <div class="col-sm-10">
                            @Html.TextBox("report_id", null, new { @class = " form-control ", ReadOnly = true, text = @Model.report[i] })
                            报告标题：@Model.title[i]<br />
                            患者姓名：@Model.name_patient[i]<br />
                            患者身份证号：@Model.ID_patient[i]<br />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-light">查看</button>
                        </div>
                    </div>
                </form>
                }

            </div>
        </div>
    </div>
</div>