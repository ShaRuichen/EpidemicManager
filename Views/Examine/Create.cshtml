@model ExamineModel
@{
    ViewBag.Ref = "Examine";
    ViewBag.Title = "创建检查报告";
}

<form class="form-horizontal" method="post" action="Create">
    <div class="form-group">
        <label for="patient_id" class="col-sm-2 control-label">患者身份证号</label>
        <div class="col-sm-10">
            @Html.TextBox("patient_id", null, new { @class = " form-control ", placeholder = "请输入身份证号" })
        </div>
    </div>
    <div class="form-group">
        <label for="title" class="col-sm-2 control-label">报告标题</label>
        <div class="col-sm-10">
            @Html.TextBox("title", null, new { @class = " form-control ", MaxLength = 30, placeholder = "请输入检查报告标题" })
        </div>
    </div>
    <div class="form-group">
        <label for="detail" class="col-sm-2 control-label">报告详细内容</label>
        <div class="col-sm-10">
            @Html.TextBox("detail", null, new { @class = " form-control ", MaxLength = 500, ScrollBars = true, placeholder = "请输入检查报告的详细内容" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-light">提交</button>
        </div>
    </div>
</form>